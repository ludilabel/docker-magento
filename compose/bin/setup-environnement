#!/usr/bin/env bash
set -o errexit
# Enable debugging
# set -x

source bin/terminal-colors

echo "$(green "Running bin/setup-docker...")"
bin/setup-docker

# depend de bin/setup-docker
echo "$(green "Running bin/setup-debian...")"
bin/setup-debian

echo "All setup scripts completed."

read -p "$(yellow "Continuer pour finir la configuration et fermer le shell Debian. Rouvrir le shell Debian pour la suite de l'installation...")"

# Avertissement : le code ci-dessous doit toujours être mis en fin de session shell car aucun code après ne sera exécuté
# car bin/setup-docker-rights-restart contient un newgrp et un restart de la Debian WSL2
echo "$(green "Running bin/setup-docker-rights-restart...")"
bin/setup-docker-rights-restart





