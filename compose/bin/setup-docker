#!/usr/bin/env bash
set -o errexit

# dependency of all bin/* commands
echo "Running bin/setup-docker-permissions"
bin/setup-docker-permissions

# dependency of all setup scripts that uses variables
echo "Running bin/setup-docker-env"
bin/setup-docker-env

# depends on bin/setup-docker-env
echo "Running bin/setup-docker-conf"
bin/setup-docker-conf

# depends on bin/setup-docker-env
echo "Running bin/setup-docker-ssh"
bin/setup-docker-ssh



