#!/usr/bin/env bash

source env/dev-setup-config.env

DOCKER_IMAGE_NAME="markoshust/magento-php:8.2-fpm-4" # dependent on compose.yaml

docker run --rm --privileged -v "$OS_SRC:/magento2-vendor" -w /magento2-vendor "$DOCKER_IMAGE_NAME" composer install

# Check if composer install was successful
if [ $? -eq 0 ]; then
    echo "Composer install completed successfully."
else
    echo "Composer install failed."
    exit 1
fi