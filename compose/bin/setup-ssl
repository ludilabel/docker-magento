#!/usr/bin/env bash
[ -z "$1" ] && echo "Please specify a domain name (ex: franz.ludilabel.docker)" && exit

# Generate certificate authority if not already setup
if ! bin/docker-compose exec -T -u root app cat /root/.local/share/mkcert/rootCA.pem | grep -q 'BEGIN CERTIFICATE'; then
  bin/setup-ssl-ca
fi
# debug : pour supprimer l'autorit√© de certification avec la commande suivante
# shell debian
# bin/docker-compose exec -T -u root app rm /root/.local/share/mkcert/rootCA.pem

# Generate the certificate for the specified domain
# Initialize an empty array to hold the processed domains
FQDN_ARRAY=()

# Loop through each fully qualified domain name
for arg in "$@"; do
  # Append the processed domain to the array
  FQDN_ARRAY+=("$arg")
done

# Use the array in the mkcert command
bin/docker-compose exec -T -u root app mkcert -key-file nginx.key -cert-file nginx.crt "${FQDN_ARRAY[@]}"

echo "Moving key and cert to /etc/nginx/certs/..."
bin/docker-compose exec -T -u root app chown app:app nginx.key nginx.crt
bin/docker-compose exec -T -u root app mv nginx.key nginx.crt /etc/nginx/certs/

